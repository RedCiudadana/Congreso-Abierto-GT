<%= form_for @comission do |f|%> 
	<%if @comission.errors.any?%>
	<div id="error_explanation">
		<h2><%= pluralize(@comission.errors.count, "error") %> Prohibidos los cambios en este post:</h2>
		<ul>
			<%@comission.errors.full_messages.each do |msg|%>
		  	<li><%= msg%></li>
		  	<% end %>
		</ul>  	
	</div>
	<% end %>
	
	<div class="field">
		<%= f.label :nombre %><br />
		<%= f.text_field :nombre %>
	</div>
	
	<div class="field">
		<%= f.label :descripcion%>
		<%= f.text_field :descripcion%>
	</div>
	
	<div class="field">
		<%= f.label :direccion%>
		<%= f.text_field :direccion%>
	</div>
	
	<div class="field">
		<%= f.label :telefono%>
		<%= f.text_field :telefono%>
	</div>
	
	<div class="field">
		<%= f.label :ext%>
		<%= f.text_field :ext%>
	</div>
	
	<div>
		<%= f.label :activa%>
		<%= f.check_box :activa, :checked => "checked", :id => 'check'%>
	</div>
    

	<div class="boton_form">
		<%= f.submit 'Guardar' , :class => 'boton_celeste'%>
	</div>
		
<% end %>
