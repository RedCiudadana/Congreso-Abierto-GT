		</div>
		
		<div class="field">
		    <%= f.label :twitter %><br />
		    <%= f.text_field :twitter %>
		</div>
		
		<div class="boton_form">
			<%= f.submit 'Guardar' , :class => 'boton_celeste'%>
		</div>
		
		<% end %>


