<link type="text/css" rel="stylesheet" href="/stylesheets/clases.css"/>
<link type="text/css" rel="stylesheet" href="/stylesheets/scaffold.css"/>
<section>
	<article id="articulo1">
		<h1 class="fuente_semibold">Listado de diputados</h1> 
		
		<table>
			<tr class="fuente_normal">
				<th>Nombre</th>
				<th>P. Postulante</th>
				<th>P. Actual</th>
				<th>Distrito</th>
			    <th></th>
			    <th></th>
			    <th></th>
			</tr>
		
		    <%@diputados.each do |diputado|%>
		    <tr class="fuente_light">
		    	<td><%= diputado.nombre%></td>
			    <td><%= diputado.partido_postulante%></td>
			    <td><%= diputado.partido_actual%></td>
			    <td><%= diputado.distrito%></td>
			    <td><%= link_to 'Ver', diputado%></td>
			    <td><%= link_to 'Editar', edit_diputado_path(diputado)%></td>
			    <td><%= link_to 'Eliminar', diputado, :confirm => '¿Está seguro de elimiar?', :method => :delete%></td>
			</tr>
			<% end %>
		</table>
		
		<br />
		
		<%= link_to 'Nuevo Diputado', new_diputado_path%>
	</article>
</section>
