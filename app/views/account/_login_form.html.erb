<link type="text/css" rel="stylesheet" href="/stylesheets/account.css" />
<div id="div-contenedor-logi">
	<form role="form">
	<h3 class="fuente_semibold blanco text-center">Iniciar Sesión</h1>
	
	<div class="form-grou div-boletin">
		<label class="fuente_normal blanco">Usuario</label>
		<input id="input-sesion1" type="text" name="username" class="form-control fuente_light gris" value="Usuario" onfocus="this.value=''" />
	</div>
				
	<div class="form-grou div-boletin">
		<label class="fuente_normal blanco">Contraseña</label>
		<input id="input-sesion2" type="password" name="password" class="form-control fuente_light gris" value="Password" onfocus="this.value=''" />
	</div>
				
  	<div class="form-group div-boletin">
		<input  id="btn-login" type="submit" name="submit" value="Ingresar" class="boton_blanco text-center" /> <br />
		<%= link_to "¿Olvidaste tu contraseña?", {:action => 'forgot_password'}, 
		{:class => 'enlaces fuente_normal blanco link-lost-password', :id => 'lnk_olvidar'}%>
  	</div>	
</form>
</div>

