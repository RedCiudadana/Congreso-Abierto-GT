<div id="header" class="clearfix">
	<!-- Script para ocultar y mostrar div -->
	<script language="JavaScript" >
		function muestra_oculta(id){
			
			if (document.getElementById){ //se obtiene el id
				var el = document.getElementById(id); //se define la variable "el" igual a nuestro div
				el.style.display = (el.style.display == 'none') ? 'block' : 'none'; //damos un atributo display:none que oculta el div
			}
		}
		function muestra_oculta_2(id){
			
			if (document.getElementById){ //se obtiene el id
				var el = document.getElementById(id); //se define la variable "el" igual a nuestro div
				el.style.display = (el.style.display == 'none') ? 'block' : 'none'; //damos un atributo display:none que oculta el div
			}
		}
		window.onload = function(){/*hace que se cargue la funci�n lo que predetermina que div estar� oculto hasta llamar a la funci�n nuevamente*/
			muestra_oculta('contenido_a_mostrar');/* "contenido_a_mostrar" es el nombre que le dimos al DIV */
			muestra_oculta_2('contenido_a_mostrar_2');/* "contenido_a_mostrar" es el nombre que le dimos al DIV */
		}
	</script>
    <!-- Fin de Script para ocultar y mostrar div -->
    <div class="bar bootstrap-enabled">
    
        <div class="container-fluid">
    
            <div class="row-fluid">
            	
                <div class="span4"><!-- Este codigo es para el logo -->
                    <h1><a class="logo" href="/" title="link to the home page"><%= image_tag 'open-congress.png', :alt => 'OpenCongress -' %><%= "#{@page_title_prefix} - " if @page_title_prefix %><%= truncate(@page_title, :length => 100) %> <%= truncate(@head_title, :length => 90) if @head_title %></a></h1>
                </div><!-- Fina del codigo para el logo -->
                
                <div class="span8">
                    <div id="user_account"><!-- Codigo para opciones de ingreso-->
                        <% if logged_in? %>
                            <div class="logged-in"><!-- Codigo para usuario loggeado-->
                                <span>Welcome, <%= link_to h(current_user.login), user_profile_url(current_user.login), {:id=> "username"} %></span>
                                <% if can_blog? %>
                                    <% link_opts = {:controller => 'admin/site_text_pages', :action => 'edit', :pageparams => params }
                                       link_opts.merge!({:page_text_editable_type => @user_object.class.name.capitalize, :page_text_editable_id => @user_object.id}) if @user_object %>
                                    | <%= link_to 'Manage SEO/Site Text for this Page', link_opts %>
                                <% end %>
                                <% if @facebook_user %>
                                    <%= fb_logout_link("Logout", url_for(:controller => 'logout', :only_path => false)) %>
                                <% else %>
                                    <%= link_to "Logout", logout_path, {:class => "btn large btn-primary", :id => "logout-btn"}%>
                                <% end %>
                                    
                            </div><!-- Fin codigo para usuario loggeado-->
                        <% else %>
                            <div class="dropdown login arrowed"><!-- Codigo para ingresar o registro-->
                                <!-- Estos son los dos botones para registrarse o login -->
                                <%= link_to "Registrarse", {:controller => 'account', :action => 'login'}, { :class => "btn large btn-primary", :id => "register-btn"} %>
                                <a href="#" onclick="muestra_oculta('contenido_a_mostrar')" class="btn large dropdown-toggle" id="login-btn" data-toggle="dropdown">
                                    Ingresar
                                </a>        
                                                     
                                <div class="dropdown-menu" id="contenido_a_mostrar"><!-- Codigo para mostrar el menpu de login -->
                                    <%= form_for User.new, :url => '/account/login', :class => "centered" do |f| %>
                                        <fieldset>
                                            <legend>Ingresar a Congreso Abierto</legend>
                                            <%= f.text_field :login, :placeholder => "usuario"%>
                                            <%= f.password_field :password, :placeholder => "contraseña" %>
                                            <%= hidden_field_tag('login_action', login_action) if (login_action ||= nil) %>
                                            <button type="submit" class="btn btn-primary">Ingresar</button>
                                        </fieldset>
                                        <a href="/account/forgot_password">¿Olvido su contraseña?</a>
                                    <% end %>
                                    <%= fb_login_and_redirect "#{request.url}?#{Time.now.tv_sec}", :text => 'Login with Facebook', :scope => 'email,user_location,user_about_me' %>
                                    
                                </div>
                            </div><!-- Fin codigo para ingresar o registro-->
                        <% end %>
                    </div> <!-- Fin del codigo para opcioens de ingreso -->
                </div>
            </div>
        </div>
    </div>
</div> <!-- // header -->

